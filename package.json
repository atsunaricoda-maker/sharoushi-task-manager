{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=sharoushi-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name sharoushi-task-manager",
    "deploy:cloudflare": "npm run build && npx wrangler pages deploy dist --project-name sharoushi-task-manager --compatibility-date=2024-01-01",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply sharoushi-task-manager-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply sharoushi-task-manager-db --remote",
    "db:seed": "wrangler d1 execute sharoushi-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:push": "git push origin main",
    "git:pull": "git pull origin main",
    "git:status": "git status",
    "git:commit": "git add . && git commit -m",
    "git:branch": "git branch",
    "git:checkout": "git checkout",
    "github:setup": "gh repo create sharoushi-task-manager --private --source=. --remote=origin",
    "github:deploy": "git push origin main"
  },
  "dependencies": {
    "hono": "^4.9.8",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}